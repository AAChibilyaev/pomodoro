---
import { Image } from 'astro:assets';
import { Down } from '../Icons';
import heroImage from '../../images/hero.png';
import DeviceLink from '../DeviceLink.astro';
---

<div
  class="relative flex h-screen w-full flex-col items-center justify-between gap-10 bg-primary px-5 sm:px-10"
>
  <div
    class="my-auto flex flex-col items-center gap-10 text-background sm:mt-auto sm:translate-y-1/2"
  >
    <h1 class="text-center text-6xl font-bold">
      Enter Flow &<br />Stay Focused
    </h1>
    <div class="max-w-md text-center">
      A Flowmodoro timer helping you enter flow state and stay focused with the
      Flowtime technique
    </div>
    <DeviceLink
      class="flex cursor-pointer items-center rounded-full bg-background px-5 py-3 text-lg text-white shadow shadow-md transition-all duration-300 hover:scale-[1.03]"
    >
      Start for free
    </DeviceLink>
  </div>
  <Image
    src={heroImage}
    alt="Hero image"
    draggable="false"
    class="bottom-0 z-10 hidden w-full max-w-5xl flex-shrink-0 translate-y-1/3 px-10 sm:block"
  />
  <div
    class="absolute -bottom-1 left-0 hidden w-[200vw] overflow-hidden fill-background sm:block"
  >
    <svg viewBox="0 0 200 10" preserveAspectRatio="none" id="wave">
      <path
        d="M0,7
        C8.33,3 8.33,11 16.67,7 
        C25,3 25,11 33.33,7
        C41.67,3 41.67,11 50,7
        C58.33,3 58.33,11 66.67,7
        C75,3 75,11 83.33,7
        C91.67,3 91.67,11 100,7
        C108.33,3 108.33,11 116.67,7
        C125,3 125,11 133.33,7
        C141.67,3 141.67,11 150,7
        C158.33,3 158.33,11 166.67,7
        C175,3 175,11 183.33,7
        C191.67,3 191.67,11 200,7
        L200,10 L0,10 Z"
      ></path>
    </svg>
  </div>
</div>

<script>
  window.addEventListener('scroll', () => {
    const wave = document.getElementById('wave');
    const scrollY = window.scrollY;
    wave.style.transform = `translateX(-${scrollY * 0.5}px)`;
  });
</script>

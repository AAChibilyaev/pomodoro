---
import { Image } from 'astro:assets';
import logo from '../../images/logo.png';
---

<nav
  class="sticky top-0 z-20 -mb-16 flex h-16 items-center justify-center border-b border-[#FFFFFF20] text-white backdrop-blur transition-all"
>
  <a
    href="/"
    class="absolute left-5 flex cursor-pointer items-center gap-2 text-2xl font-bold"
  >
    <Image
      src={logo}
      alt="Logo of Flowmodor"
      quality={100}
      width={32}
      height={32}
      class="rounded-md bg-background"
      draggable={false}
    />
    <div>Flowmodor</div>
  </a>
  <div class="hidden gap-10 text-lg font-medium sm:flex">
    <a href="/downloads">Downloads</a>
    <a href="/pricing">Pricing</a>
    <a href="/blog">Blog</a>
  </div>
  <a
    href="https://app.flowmodor.com"
    class="absolute right-5 cursor-pointer rounded-full bg-primary px-3 py-2 text-sm font-medium text-background transition-all"
  >
    Get started
  </a>
</nav>;
